{
  "name": "editprompt",
  "version": "1.2.0",
  "description": "A CLI tool that lets you write prompts for CLI tools using your favorite text editor",
  "keywords": [
    "cli",
    "clipboard",
    "command-line",
    "editor",
    "prompt",
    "text-editor",
    "tmux"
  ],
  "homepage": "https://github.com/eetann/editprompt",
  "bugs": {
    "url": "https://github.com/eetann/editprompt/issues"
  },
  "license": "MIT",
  "author": "eetann",
  "repository": {
    "type": "git",
    "url": "https://github.com/eetann/editprompt.git"
  },
  "bin": {
    "editprompt": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "oxlint --type-aware && oxfmt --check",
    "lint:fix": "oxlint --type-aware --fix && oxfmt",
    "format": "oxfmt --write .",
    "typecheck": "tsgo --noEmit",
    "release": "bun run lint && bun run typecheck && bun run test && bun run build && bumpp",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "dependencies": {
    "@logtape/logtape": "^2.0.2",
    "clipboardy": "^4.0.0",
    "conf": "^15.0.2",
    "gunshi": "^0.29.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "^7.0.0-dev.20251119.1",
    "bumpp": "^10.3.1",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "oxlint-tsgolint": "^0.15.0",
    "tsdown": "^0.20.3"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
