{
	"name": "editprompt",
	"version": "0.0.1",
	"author": "eetann",
	"description": "A CLI tool that lets you write prompts for CLI tools using your favorite text editor",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/eetann/editprompt.git"
	},
	"homepage": "https://github.com/eetann/editprompt",
	"bugs": {
		"url": "https://github.com/eetann/editprompt/issues"
	},
	"keywords": [
		"cli",
		"editor",
		"prompt",
		"tmux",
		"clipboard",
		"command-line",
		"text-editor"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"files": ["dist"],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"bin": {
		"editprompt": "./dist/index.js"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"lint": "biome check",
		"typecheck": "tsgo --noEmit",
		"release": "bun lint && bun typecheck && bun test && bun run build && bumpp",
		"test": "bun test",
		"test:watch": "bun test --watch"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/bun": "^1.2.16",
		"@types/find-process": "^1.2.2",
		"@types/inquirer": "^9.0.8",
		"@types/node": "^24.0.1",
		"@typescript/native-preview": "^7.0.0-dev.20250712.1",
		"bumpp": "^10.2.0",
		"tsdown": "latest"
	},
	"packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677",
	"dependencies": {
		"clipboardy": "^4.0.0",
		"find-process": "^1.4.10",
		"gunshi": "^0.26.3",
		"inquirer": "^12.6.3"
	},
	"private": true,
	"peerDependencies": {
		"typescript": "^5"
	}
}
